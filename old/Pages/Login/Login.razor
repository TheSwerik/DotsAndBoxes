@page "/login"
@page "/"
@using DotsAndBoxes.Data.User
@inject UserService UserService
@inject NavigationManager NavigationManager

<div class="container">
    <div class="center">
        <div class="card card-block mx-auto p-4 align-items-center" style="width: 25vw; height: 15vh">
            <table>
                <tr>
                    <td style="font-size: 2vh; width: 6vw">
                        UserName:
                    </td>
                    <td style="font-size: 2vh; width: 16.2vw">
                        <input class="form-control w-100" @bind="@_user.UserName" @onkeyup="CheckEnter"/>
                    </td>
                </tr>
            </table>
            <button class="btn btn-primary w-100 my-auto" @onclick="OpenServerBrowser">Play</button>
        </div>
    </div>
</div>

@code
{
    private readonly User _user = new User();

    private void CheckEnter(KeyboardEventArgs e)
    {
        if (e.Key.Equals("Enter")) OpenServerBrowser();
    }

    private void OpenServerBrowser()
    {
        if (string.IsNullOrWhiteSpace(_user.UserName)) return;
        UserService.CreateUser(_user.UserName);
        NavigationManager.NavigateTo("/serverBrowser");
    }
}